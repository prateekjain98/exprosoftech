---
import CaseStudyCarousel from "./CaseStudyCarousel";
import { sanityClient } from "sanity:client";

// Fetch the top 3 case studies
const caseStudiesQuery = `*[_type == "caseStudy" && isLive == true] | order(publishedAt desc)[0..2] {
  title,
  "slug": slug.current,
  category,
  description,
  excerpt,
  industry,
  duration,
  "logo": logo.asset->url,
  "featuredImage": featuredImage.asset->url,
  publishedAt,
  services,
  isLive
}`;

const caseStudies = await sanityClient.fetch(caseStudiesQuery);
---

<CaseStudyCarousel caseStudies={caseStudies} client:load /> 