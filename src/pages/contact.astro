---
import Base from "@/layouts/Base.astro";
import ContactHero from "@/partials/ContactHero.astro";
import CallToAction from "@/partials/CallToAction.astro";
import Faq from "../components/FAQ";
import { getEntry } from "astro:content";
import ConsultationCTA from "../components/ConsultationCTA";
import { sanityClient } from "sanity:client";
import NewFAQ from "../components/NewFAQ";
import ContactForm from "../components/ContactForm";

const contactQuery = `*[_type == "contact"][0] {
  title,
  description,
  meta_title,
  meta_description,
  canonicalUrl,
  "image": image.asset->url,
  hero {
    "heroImage": heroImage.asset->url,
    logo {
      "src": src.asset->url,
      alt
    },
    title,
    subtitle,
    description,
    contact_info[] {
      icon,
      title,
      description
    },
    list[] {
      icon,
      title,
      description
    }
  },
  faq {
    heading {
      title,
      subtitle,
      description
    },
    faqItems[] {
      title,
      description
    }
  },
  consultationCTA {
    tagline,
    title,
    subtitle,
    description,
    metrices[] {
      value,
      label,
      icon
    },
    buttonText,
    image {
      "src": src.asset->url,
      alt
    }
  }
}`

const contactData = await sanityClient.fetch(contactQuery);
const { title, meta_description, meta_title, canonicalUrl, image, hero, faq, consultationCTA } = contactData;

// Transform FAQ data to match NewFAQ component's expected format
const transformedFaq = {
  title: faq.heading.title,
  pageTitle: faq.heading.title,
  subtitle: faq.heading.subtitle,
  description: faq.heading.description,
  list: faq.faqItems.map((item: any) => ({
    ...item,
    active: false
  }))
};
---

<Base
  title={title}
  meta_title={meta_title}
  description={meta_description}
  image={image}
  canonical={canonicalUrl}>
  <ContactHero hero={hero} />
  <NewFAQ client:load Faq={[transformedFaq]} />
  <!-- <ConsultationCTA client:load /> -->
</Base>
