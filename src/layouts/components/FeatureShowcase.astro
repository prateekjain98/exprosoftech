---
import DynamicIcon from '@/helpers/DynamicIcon';

interface Props {

  image: {
    src: string;
    alt: string;
  };
  heading: string;
  description: string;
  buttonText: string;
  buttonLink: string;

}

const { 

  image,
  heading,
  description,
  buttonText,
  buttonLink

} = Astro.props;
---

<section class="py-12 md:py-24 bg-white">
  <div class="max-w-[100rem] mx-auto px-0 md:px-6">
    <!-- Main Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-20 items-center mb-8 md:mb-12 rounded-tl-[2rem] md:rounded-tl-[3rem] rounded-tr-[2rem] md:rounded-tr-[3rem] p-6 md:p-12 feature-card bg-[#E9F2FF] h-fit mx-4 md:mx-16 border-2 border-blue-100">
      <!-- Content Section -->
      <div class="space-y-6 md:space-y-10">
        <div class="mt-8 md:mt-16">
          <h2 class="text-3xl md:text-5xl mb-6 md:mb-10">{heading}</h2>
          <p class="text-lg md:text-xl/inherit mb-6 md:mb-10">{description}</p>
          <div class="flex flex-wrap justify-center lg:justify-start gap-4">
            <a
              href={buttonLink}
              class="btn btn-primary"
              data-aos="fade-up-sm"
              data-aos-delay="100"
            >
              {buttonText}
              <span class="icon-wrapper">
                <span class="icon">
                  <DynamicIcon icon={"FaArrowRight"} />
                </span>
              </span>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Image -->
      <div class="flex justify-center mt-8 md:mt-0">
        <img
          src={image.src}
          alt={image.alt}
          class="rounded-lg w-full object-cover md:object-right-bottom pb-4 md:pb-8"
        />
      </div>
    </div>

    <!-- New Feature Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mx-4 md:mx-16">
      <!-- Security Card -->
      <div class="feature-card bg-[#E9F2FF] p-6 md:p-10 rounded-tr-[2rem] md:rounded-tr-[3rem] rounded-bl-[2rem] md:rounded-bl-[3rem] border-2 border-blue-100">
        <div class="w-16 h-16 rounded-xl flex items-center justify-center mb-4 md:mb-6 icon-gradient">
          <div class="icon-wrapper flex items-center justify-center w-full h-full">
            <div class="icon-animation w-8 h-8">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="w-full h-full text-primary"
                viewBox="0 0 24 24" 
                fill="currentColor"
              >
                <path d="M12 2L3 5.77V11c0 5.1 3.75 9.37 9 10 5.25-.63 9-4.9 9-10V5.77L12 2zm0 18c-4.41-.48-7-4.3-7-9v-4.23L12 4l7 2.77V11c0 4.7-2.59 8.52-7 9z"/>
                <path d="M12 5L6.37 7.69v3.15c0 3.48 2.34 6.37 5.63 7.16 3.29-.79 5.63-3.68 5.63-7.16V7.69L12 5z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4">Security and compliance</h3>
        <p class="text-gray-600 mb-8 md:mb-16 text-base md:text-lg">We lead with a security-first mindset</p>
        <a href="#" class="inline-flex items-center text-primary hover:underline" aria-label="Learn more about security and compliance">
          Learn More
          <span class="ml-2">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              class="w-4 h-4"
              viewBox="0 0 24 24" 
              fill="currentColor"
            >
              <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
            </svg>
          </span>
        </a>
      </div>

      <!-- Integrations Card -->
      <div class="feature-card bg-[#E9F2FF] p-6 md:p-10 rounded-tl-[2rem] md:rounded-tl-[3rem] rounded-br-[2rem] md:rounded-br-[3rem] border-2 border-blue-100">
        <div class="w-16 h-16 rounded-xl flex items-center justify-center mb-4 md:mb-6 icon-gradient">
          <div class="icon-wrapper flex items-center justify-center w-full h-full">
            <div class="icon-animation w-8 h-8">
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="w-full h-full text-primary"
                viewBox="0 0 24 24" 
                fill="currentColor"
              >
                <path d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"/>
              </svg>
            </div>
          </div>
        </div>
        <h3 class="text-xl md:text-2xl font-semibold mb-3 md:mb-4">Integrations</h3>
        <p class="text-gray-600 mb-8 md:mb-16 text-base md:text-lg">Integrate for planning management tools</p>
        <a href="#" class="inline-flex items-center text-primary hover:underline" aria-label="Learn more about integrations">
          Learn More
          <span class="ml-2">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              class="w-4 h-4"
              viewBox="0 0 24 24" 
              fill="currentColor"
            >
              <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
            </svg>
          </span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .feature-card {
    @apply transition-all duration-300;
  }
  
  .text-primary {
    color: #0066FF;
  }

  .icon-gradient {
    background: linear-gradient(
      135deg,
      rgba(59, 130, 246, 0.1) 0%,
      rgba(59, 130, 246, 0.2) 100%
    );
    border: 1px solid rgba(59, 130, 246, 0.1);
    box-shadow: 0 2px 10px rgba(59, 130, 246, 0.05);
  }

  .icon-wrapper {
    @apply text-primary relative overflow-hidden;
  }
</style>